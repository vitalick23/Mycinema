@Model = Cinema.Models.FilmsViewModel
@{
        ViewBag.Title = "Home Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
                @foreach (var b in Model.Films)
                {

                    <tr>
                        
                        <td><p>@b.Name</p></td>
                        <td><p>@b.genre</p></td>
                       
                            <td>
                                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                 + Convert.ToBase64String(b.Image) + "\" />")
                            </td>
                        
                        <td><p><a href="/Home/CreateFilms">Add</a></p></td>
                    </tr>
                }
        </table>
    </div>
</body>
</html>